#include <iostream>
#include <vector>
using namespace std;

bool isRotatedAndSorted(vector<int>& arr) {
    int n = arr.size();
    int count = 1;

    for (int i = 0; i < n; i++) {
        if (arr[i] > arr[(i + 1) % n]) {
            
            count++;
        }

        
    }

    return count <=2;
}


int main() {
    vector<int> arr = {3, 4, 5, 1, 2};
    if (isRotatedAndSorted(arr)) {
        cout << "The array is rotated and sorted.\n";
    } else {
        cout << "The array is NOT rotated and sorted.\n";
    }
    return 0;
}
